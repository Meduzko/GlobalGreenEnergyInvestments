<% projects_count = projects.count %>
<section class="projects-slider">

  <h2><%= I18n.t(:title_latest_project) %></h2>

  <p class="default-text"><%= I18n.t(:latest_project_text) %></p>

  <div class="swiper-container" <% if projects_count > 1 %>data-jscomp="components/slider"<% end %>>
    <div class="swiper-wrapper">
      <% projects.each do |project| %>
        <div class="swiper-slide" data-src="<%= project.big_foto.url %>" style="background-image:url('<%= project.big_foto.url %>')">
          <div class="slider-content">
            <h4>
              <span><i class="sun-icon"></i></span>
              <%= project.name %>
            </h4>

            <div class="project-location"><%= project.location %></div>

            <div class="project-price">
              <span>needed:</span>
              <%= cute_amount(project.total_amount_need) %><sup>&euro;</sup>
            </div>

            <div class="project-statistic">
              <span><%= calculate_funded(project.total_amount_need, project.total_amount_invested) %>%<i>Funded</i></span>
              <canvas data-jscomp="components/projectStatistic"
                      data-percentage="16"
                      class="canvas-statistic"
                      width="100"
                      height="100"></canvas>
            </div>
            <div class="project-statistic">
              <span><%= project.irr.round %>%<i>Return</i></span>
              <canvas data-jscomp="components/projectStatistic"
                      data-percentage="100"
                      class="canvas-statistic"
                      width="100"
                      height="100"></canvas>
            </div>

            <%= link_to 'View project', project_path(project.id), class: 'default-btn primary-btn' %>

            <p><%= project.title %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="swiper-pagination"></div>

  </div>

  <% if projects_count > 1 %>
    <div class="swiper-button-prev icon-left-dir"></div>
    <div class="swiper-button-next icon-right-dir"></div>
  <% end %>

</section>
