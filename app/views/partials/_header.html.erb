<header>

  <div class="header-block">
    <nav>
      <span class="icon-menu menu-control"></span>
      <ul>
        <li><a href="#"><%= I18n.t(:menu_idea) %></a></li>
        <li><a href="#"><%= I18n.t(:menu_invest) %></a></li>
        <li class="active"><a href="#"><%= I18n.t(:menu_about) %></a></li>
      </ul>
      <ul class="auth-links">
        <li class="contact-link"><a href="#"><%= I18n.t(:menu_contact) %></a></li>
