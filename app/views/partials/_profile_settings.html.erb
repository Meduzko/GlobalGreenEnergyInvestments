  <h1 class="inner-page-main-title"><%= I18n.t(:profile_settings_title) %></h1>

<%= form_for root_path,
             :html => {
                 'data-jscomp' => 'components/validator',
                 :class => 'my-profile-settings-form'
             } do |f| %>


  <div class="field">
    <div class="default-label">
      <%= f.label :first_name %>
      <em><%= I18n.t(:cmn_official_label) %></em>
    </div>
    <%= f.text_field :first_name,
                     autofocus: true,
                     :'data-validator-required' => I18n.t(:error_required),
                     :placeholder => 'First name',
                     :class => 'default-input' %>
    <span class="icon-ok">&nbsp;</span>
  </div>


  <div class="field">
    <div class="default-label">
      <%= f.label :last_name %>
      <em><%= I18n.t(:cmn_official_label) %></em>
    </div>
    <%= f.text_field :last_name,
                     :'data-validator-required' => I18n.t(:error_required),
                     :placeholder => 'Last name',
                     :class => 'default-input' %>
    <span class="icon-ok">&nbsp;</span>
  </div>

  <div class="field">
    <%= f.label :email, :class => 'default-label' %>
    <%= f.email_field :email,
                      :'data-validator-required' => I18n.t(:error_required),
                      :'data-validator-email' => I18n.t(:error_email),
                      :placeholder => 'example@mail.com',
                      :class => 'default-input' %>
    <span class="icon-ok">&nbsp;</span>
  </div>

  <div class="field">
    <div class="default-label">
      <%= f.label :phone %>
      <em><%= I18n.t(:cmn_not_required) %></em>
    </div>
    <%= f.email_field :phone,
                      :class => 'default-input' %>
    <span class="icon-ok">&nbsp;</span>
  </div>


  <div class="separator-with-text">
    <span>Additional information for investment</span>
    <hr/>
  </div>


  <div class="field birthday-field" data-jscomp="components/select2">
    <%= f.label :date_of_birthday, :class => 'default-label' %>
    <%= f.date_select :date_of_birthday,
                      order: [:day, :month, :year],
                      :'data-validator-required' => I18n.t(:error_required),
                      :class => 'default-input' %>
    <span class="icon-ok">&nbsp;</span>
  </div>

  <div class="field country-field" data-jscomp="components/select2">
    <%= f.label :country, :class => 'default-label' %>
    <%= f.country_select :country, ['NL'],
                         :'data-validator-required' => I18n.t(:error_required),
                         :class => 'default-input' %>
    <span class="icon-ok">&nbsp;</span>
  </div>

  <div class="field address-field">
    <%= f.label :address, :class => 'default-label' %>
    <div>
      <%= f.text_field :street,
                       :placeholder => 'Street',
                       :class => 'default-input' %>
      <%= f.text_field :flat_number,
                       :placeholder => 'Number',
                       :class => 'default-input small-input' %>
      <%= f.text_field :city,
                       :placeholder => 'City',
                       :class => 'default-input' %>
      <%= f.text_field :postal,
                       :placeholder => 'Postal',
                       :class => 'default-input small-input' %>
    </div>
  </div>

  <div class="field">
    <h4 class="inner-page-sub-title">Which bank account should the payment be transferred to?</h4>
  </div>

  <div class="field">
    <%= f.label :name, :class => 'default-label' %>
    <%= f.email_field :bank_account_name,
                      :'data-validator-required' => I18n.t(:error_required),
                      :placeholder => 'Bank account name',
                      :class => 'default-input' %>
    <span class="icon-ok">&nbsp;</span>
  </div>

  <div class="field">
    <%= f.label :iban, :class => 'default-label' %>
    <%= f.email_field :iban,
                      :'data-validator-required' => I18n.t(:error_required),
                      :placeholder => 'Iban',
                      :class => 'default-input' %>
    <span class="icon-ok">&nbsp;</span>
  </div>


  <p class="default-text">Omdat GGIG gelooft in een toekomst met 100% duurzame energie, waarbij zoveel mogelijk
    huishoudens zelf hun energie opwekken, hebben we een unieke regeling voor eigenaren van zonnepanelen
    ontwikkeld.</p>

  <div class="separator-with-text separator-with-icon">
    <div>
      <span class="icon-ok"></span>
    </div>
    <hr/>
  </div>


  <div class="actions">
    <%= f.submit 'Save', :class => 'default-btn primary-btn' %>
  </div>

<% end %>
