<ul class="statistic-circles">
  <% unless is_my_investment_page? || is_project_page? %>
    <li>
     <div>
       <%= Investor.investor_count %>
       <span>investors</span>
     </div>
    </li>
  <% end %>

  <li>
   <div>
     <%= cute_amount(infographics_invested) %> <sup>â‚¬</sup>
     <span>invested</span>
   </div>
  </li>

  <% unless is_project_page? %>
    <li>
     <div>
       <%= infographics_projects %>
       <span>projects</span>
     </div>
    </li>
  <% end %>

  <% if is_project_page? %>
    <li>
     <div>
       <%= @project.irr %>%
       <span>average return</span>
     </div>
    </li>
  <% elsif is_my_investment_page? %>
    <li>
     <div>
       <%= infographics_average_for_user %>%
       <span>average return</span>
     </div>
    </li>
  <% else %>
    <li>
     <div>
       <%= infographics_average %>%
       <span>average return</span>
     </div>
    </li>
  <% end %>

  <% if is_project_page? %>
    <% if @project.kwh_generated[:already_generated] > 0 %>
      <li>
        <div data-jscomp='components/statisticCounter' data-jscomp-config='{"stepValue": "<%= @project.kwh_generated[:kwh_interval] %>" }'>
          <p class="savedStatistic"><%= sprintf('%.2f', @project.kwh_generated[:already_generated]) %></p>
          <span>KWH generated</span>
       </div>
      </li>
    <% end %>
    <% if @project.kwh_saved[:already_saved] > 0 %>
      <li>
        <div data-jscomp='components/statisticCounter' data-jscomp-config='{"stepValue": "<%= @project.kwh_saved[:kwh_interval] %>" }'>
         <p class="savedStatistic"><%= sprintf('%.2f', @project.kwh_saved[:already_saved]) %></p>
         <span>KWH saved</span>
       </div>
      </li>
    <% end %>
  <% elsif is_my_investment_page? %>
    <% if kwh_generated_for_user[:already_generated] > 0 %>
      <li>
        <div data-jscomp='components/statisticCounter' data-jscomp-config='{"stepValue": "<%= kwh_generated_for_user[:kwh_interval] %>" }'>
          <p class="savedStatistic"><%= sprintf('%.2f', kwh_generated_for_user[:already_generated]) %></p>
          <span>KWH generated</span>
       </div>
      </li>
    <% end %>
    <% if kwh_saved_for_user[:already_saved] > 0 %>
      <li>
        <div data-jscomp='components/statisticCounter' data-jscomp-config='{"stepValue": "<%= kwh_saved_for_user[:kwh_interval] %>" }'>
         <p class="savedStatistic"><%= sprintf('%.2f', kwh_saved_for_user[:already_saved]) %></p>
         <span>KWH saved</span>
       </div>
      </li>
    <% end %>
  <% else %>
    <% if kwh_projects_generated[:already_generated] > 0 %>
      <li>
        <div data-jscomp='components/statisticCounter' data-jscomp-config='{"stepValue": "<%= kwh_projects_generated[:kwh_interval] %>" }'>
          <p class="savedStatistic"><%= sprintf('%.2f', kwh_projects_generated[:already_generated]) %></p>
          <span>KWH generated</span>
       </div>
      </li>
    <% end %>
    <% if kwh_projects_saved[:already_saved] > 0 %>
      <li>
        <div data-jscomp='components/statisticCounter' data-jscomp-config='{"stepValue": "<%= kwh_projects_saved[:kwh_interval] %>" }'>
         <p class="savedStatistic"><%= sprintf('%.2f', kwh_projects_saved[:already_saved]) %> </p>
         <span>KWH saved</span>
       </div>
      </li>
    <% end %>
  <% end %>

  <% if is_my_investment_page? %>
    <li>
     <div>
       <%= cute_amount(money_return_for_user) %> <sup>â‚¬</sup>
       <span>money return</span>
     </div>
    </li>
  <% end %>
 </ul>
