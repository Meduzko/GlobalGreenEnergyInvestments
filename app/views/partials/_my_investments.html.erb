<%= form_for(resource,
             as: resource_name,
             url: registration_path(resource_name),
             html: {'data-jscomp' => 'components/validator'}) do |f| %>

  <%= devise_error_messages! %>
  <div class="field">
    <div class="default-label">
      <%= f.label :first_name %>
      <em><%= I18n.t(:registr_official_label) %></em>
    </div>
    <%= f.text_field :first_name,
                     autofocus: true,
                     :'data-validator-required' => I18n.t(:error_required),
                     :class => 'default-input' %>
    <span class="icon-ok">&nbsp;</span>
  </div>

  <div class="field">
    <div class="default-label">
      <%= f.label :last_name %>
      <em><%= I18n.t(:registr_official_label) %></em>
    </div>
    <%= f.text_field :last_name,
                     :'data-validator-required' => I18n.t(:error_required),
                     :class => 'default-input' %>
    <span class="icon-ok">&nbsp;</span>
  </div>

  <div class="field">
    <%= f.label :email, :class => 'default-label' %>
    <%= f.email_field :email,
                      :required => true,
                      :'data-validator-required' => I18n.t(:error_required),
                      :'data-validator-email' => I18n.t(:error_email),
                      :class => 'default-input' %>
    <span class="icon-ok">&nbsp;</span>
  </div>

  <hr/>

  <div class="field">
    <div class="default-label">
      <%= f.label :password %><br/>
      <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
    <%= f.password_field :password,
                         :'data-validator-required' => I18n.t(:error_required),
                         autocomplete: 'off',
                         :class => 'default-input' %>
    <span class="icon-ok">&nbsp;</span>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :class => 'default-label' %>
    <%= f.password_field :password_confirmation,
                         :'data-validator-required' => I18n.t(:error_required),
                         autocomplete: 'off',
                         :class => 'default-input' %>
    <span class="icon-ok">&nbsp;</span>
  </div>

  <div class="actions">
    <%= f.submit 'Save', :class => 'default-btn primary-btn' %>
  </div>
<% end %>
