<div class="inner-page investments-page legal-page">

  <p class="default-text">View the projects that you are interested in to further understand the risks and the return of
    a participation.</p>


  <div class="tabs-component" data-jscomp="components/tabs">
    <ul>
      <% @page_legal.page_tabs.active.each do |tab| %>
        <li><%= link_to tab.tab_name, '#'.concat(tab.slug_ancor) %></li>
      <% end %>
    </ul>
    <% @page_legal.page_tabs.active.each do |tab| %>
      <div class="tabs-content" id="<%= tab.slug_ancor %>">
        <div class="content-with-text">
          <h1 class="inner-page-main-title"><%= tab.tab_name %></h1>
          <%= tab.description.html_safe %>
        </div>
      </div>
    <% end %>
  </div>
</div>
