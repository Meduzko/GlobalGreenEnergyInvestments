<% @investor ||= investor %>
<html>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <body>
    <table cellpadding="0" cellspacing="0" style="width: 100%; height: 100%; background-color: #f7f7f7; font-family: arial;">
      <tr valign="middle">
        <td style="height: 60px; text-align: center; vertical-align: middle; color: #818181; font-size: 14px;">
          <%= @investor.created_at.to_date.to_formatted_s(:long) %>
          </td>
      </tr>
      <tr valign="middle">
        <td style="text-align: center;">
          <table cellpadding="0" cellspacing="0" style="width: 650px; background: #ffffff; box-shadow: 1px 1px 1px #cccccc; margin: 0 auto;">
            <tr valign="top">
              <td style="text-align: center; background: url('http://globalgreenenergyinvestments.com/images/ggig_newsletter.jpg') no-repeat 0 100%; height: 450px;">
                <a href="http://globalgreenenergyinvestments.com" target="_blank"><img src="http://globalgreenenergyinvestments.com/images/ggig_newsletter_logo.png" alt="Global Green Energy Investments"/></a>
              </td>
            </tr>
            <tr valign="top">
              <td style="color: #3e3e3e; padding: 30px 58px 20px 58px; text-align: left; font-size: 20px; line-height: 22px; font-weight: bold; text-transform: uppercase;">
                <%= I18n.t(:participation_thanks_title) %>
              </td>
            </tr>
            <tr valign="top">
              <td style="text-align: left; font-size: 15px; line-height: 20px; color: #818181">
                <p style="margin: 0 0 0 0; padding: 10px 58px 10px 58px;">
                  <span style="color: #818181">
                    <%= yield %>
                  </span>
                </p>
              </td>
            </tr>
            <tr valign="top">
              <td style="color: #b0b0b0; padding: 20px 58px 40px 58px; text-align: left; font-size: 14px;">
                <%= I18n.t(:participation_thanks_text_5).html_safe %><br><br>
                <font size="1"><%= I18n.t(:participation_thanks_text_7) %></font>
              </td>
            </tr>
          </table>
        </td>
      </tr>
      <tr>
        <td style="text-align: center; color: #b0b0b0; padding: 0;">
        </td>
      </tr>

    </table>

  </body>
</html>
