<section class="main-slider swiper-container" data-jscomp="components/slider">
  <div class="swiper-wrapper">
    <div class="swiper-slide" style="background-image:url('/images/slider/slide_11.jpg')">
      <div class="slider-content">
        <h1><%= I18n.t(:main_slider_text_1) %><span><%= I18n.t(:subtitle_main_1) %></span></h1>
      </div>
    </div>
    <div class="swiper-slide" data-src="/images/slider/slide_22.jpg" style="background-image:url('/images/slider/slide_22.jpg')">
      <div class="slider-content">
        <h1><%= I18n.t(:main_slider_text_2) %><span><%= I18n.t(:subtitle_main_2) %></span></h1>
      </div>
    </div>
    <div class="swiper-slide" data-src="/images/slider/slide_33.jpg" style="background-image:url('/images/slider/slide_33.jpg')">
      <div class="slider-content">
        <h1><%= I18n.t(:main_slider_text_3) %><span><%= I18n.t(:subtitle_main_3).html_safe %></span></h1>
      </div>
    </div>
  </div>
  <div class="swiper-pagination"></div>
</section>


<main>

  <section class="projects-statistic">
    <p class="default-text"><%= I18n.t(:stat_text) %></p>
    <%= render 'partials/projects_stat_circles' %>
  </section>

  <%= render 'partials/projects_slider' %>

  <section class="key-values">
    <h2><%= I18n.t(:title_key_values) %></h2>

    <p class="default-text"><%= I18n.t(:key_values_text) %></p>

    <ul>
      <li class="easy">
        <span></span>
        <h5><%= I18n.t(:key_values_easy) %></h5>

        <p><%= I18n.t(:key_values_easy_text) %></p>
      </li>
      <li class="transparent">
        <span></span>
        <h5><%= I18n.t(:key_values_transparent) %></h5>

        <p><%= I18n.t(:key_values_transparent_text) %></p>
      </li>
      <li class="secure">
        <span></span>
        <h5><%= I18n.t(:key_values_secure) %></h5>

        <p><%= I18n.t(:key_values_secure_text) %></p>
      </li>
      <li class="stable-return">
        <span></span>
        <h5><%= I18n.t(:key_values_return) %></h5>

        <p><%= I18n.t(:key_values_return_text) %></p>
      </li>
      <li class="trade">
        <span></span>
        <h5><%= I18n.t(:key_values_trade) %></h5>

        <p><%= I18n.t(:key_values_trade_text) %></p>
      </li>
      <li class="growing">
        <span></span>
        <h5><%= I18n.t(:key_values_growing) %></h5>

        <p><%= I18n.t(:key_values_growing_text) %></p>
      </li>
    </ul>

  </section>

  <%= render 'partials/subscription' %>

</main>
